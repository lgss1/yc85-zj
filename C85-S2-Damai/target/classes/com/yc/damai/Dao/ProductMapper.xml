<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- 当前接口名 -->
<mapper namespace="com.yc.damai.Dao.DmProductMapper">
 <!-- id是select标签的唯一标识
  resultType 是映射的实体类的类型
  -->
  <select id="selectAll" resultType="com.yc.damai.been.DmProduct">
    select * from dm_product
  </select>
  
  <insert id="insert" >
    insert into dm_category values(null,#{cname},#{pid})
  </insert>
  
  <update id="update" >
    update dm_category set cname=#{cname},pid=#{pid} where id=#{id}
  </update>
  
  <delete id="delete" >
    delete from dm_category where id=#{id}
  </delete>
  
  <select id="selectproduct" resultType="com.yc.damai.been.DmProduct">
    select * from dm_product where id=#{id}
  </select>
  
  <insert id="insertproduct" >
    insert into dm_product values(null,#{pname},#{marketPrice},#{shopPrice},#{image},#{pdesc},#{isHot},now(),#{cid})
  </insert>
  
  <update id="updateproduct" >
    update dm_product set pname=#{pname},market_price=#{marketPrice},shop_price=#{shopPrice} where id=#{id}
  </update>
  
  <delete id="deleteproduct" >
    delete from dm_product  where id=#{id}
  </delete>
</mapper>